{
  "compilerOptions": {
    "target": "ES2020",                         
    "module": "ES2022",                          // ESM support
    "moduleResolution": "node",                  // Node-style module resolution
    "esModuleInterop": true,                     // CommonJS module support
    "allowSyntheticDefaultImports": true,        // Default imports support
    "forceConsistentCasingInFileNames": true,    // Import path case sensitivity check
    "strict": true,                            
    "skipLibCheck": true,                       
    "outDir": "./dist",                        
    "rootDir": "./src"                       
  },
  "ts-node": {
    "esm": true                           
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
